---
pagination:
  data: products.products
  size: 1
  alias: flower
permalink: "saintpaulior/{{ flower.title | slugify }}/"
layout: base.njk
eleventyComputed:
  title: "{{ flower.title }} - Saintpaulia stickling"
  description: "{{ flower.title }}: {{ flower.description | striptags | truncate(160, true, '...') }} KÃ¶p sticklingar av unika Saintpaulior hos Drumla i Hudiksvall."
  ogDescription: "{{ flower.title }}: {{ flower.description | striptags | truncate(160, true, '...') }} KÃ¶p sticklingar av unika Saintpaulior hos Drumla i Hudiksvall."
  ogImage: "/{{ flower.imagePath }}"
---

{% block jsonld %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "{{ flower.title }}",
  "description": "{{ flower.description | striptags | truncate(160, true, '...') }} KÃ¶p sticklingar av unika Saintpaulior hos Drumla i Hudiksvall.",
  "image": "{{ site.url }}/{{ flower.imagePath }}",
  "brand": {
    "@type": "Brand",
    "name": "Drumla"
  },
  "offers": {
    "@type": "Offer",
    "priceCurrency": "SEK",
    "price": "{{ site.pricing[flower.category].price or site.pricing.standard.price }}",
    "itemCondition": "https://schema.org/NewCondition",
    "availability": "https://schema.org/InStock"
  },
  "url": "{{ site.url }}/saintpaulior/{{ flower.title | slugify }}/"
}
</script>
{% endblock %}

<!-- Start Flower Hero Area -->
<section id="flower-hero" class="header-area header-eight">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-12 col-md-12 col-12">
        <div class="header-content text-center">
          <h1>{{ flower.title }}</h1>
          <div class="mt-3">
            <span>
              <i class="lni lni-leaf"></i>
              Saintpaulia-stickling
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Flower Hero Area -->

{% set breadcrumbs = [
  { name: "Hem", url: "/", current: false },
  { name: "Saintpaulior", url: "/saintpaulior/", current: false },
  { name: flower.title, url: page.url, current: true }
] %}
{% include "breadcrumbs.njk" %}

<!-- Flower Image -->
<section class="post-image py-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="text-center">
          <div class="rounded-3 overflow-hidden">
              {% image flower.imagePath, flower.title, "(max-width: 768px) 100vw, 856px" %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Flower Image -->

<!--====== FLOWER CONTENT START ======-->
