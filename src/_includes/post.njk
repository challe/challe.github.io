---
layout: base.njk
---

{% block styles %}
<style>
  .post-content p:not(.lead) {
    margin-top: 1.5rem !important;
  }
</style>
{% endblock %}

{% block jsonld %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ title }}",
  "description": "{{ description }}",
  "author": {
    "@type": "Person",
    "name": "{{ site.author }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "{{ site.business.name }}",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.url }}{{ site.defaultImage }}"
    }
  },
  "datePublished": "{{ date | date('iso') }}",
  "dateModified": "{{ date | date('iso') }}",
  "url": "{{ site.url }}{{ page.url }}",
  "image": "{{ site.url }}/{{ image or 'assets/images/blog/forsagarden.jpg' }}",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
  }{% if location %},
  "locationCreated": {
    "@type": "Place",
    "name": "{{ location }}"
  }{% endif %}
}
</script>
{% endblock %}

<!-- Start Post Hero Area -->
<section id="post-hero" class="header-area header-eight">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-12 col-md-12 col-12">
        <div class="header-content text-center">
          <h1>{{ title }}</h1>
          
          <div class="mt-3">
            <span>
              <i class="lni lni-clock"></i>
              Publicerad {{ date | date("D MMMM YYYY", "sv") }}
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Post Hero Area -->

{% set breadcrumbs = [
  { name: "Hem", url: "/", current: false },
  { name: "Aktuellt", url: "/aktuellt/", current: false },
  { name: title, url: page.url, current: true }
] %}
{% include "breadcrumbs.njk" %}

<!-- Post Image -->
<section class="post-image py-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="text-center">
          <div class="rounded-3 overflow-hidden" style="max-height: 300px;">
            {% image image or "assets/images/blog/forsagarden.jpg", title, "(max-width: 768px) 100vw, 66vw" %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Post Image -->

<!--====== POST CONTENT START ======-->
<section id="post-content" class="post-content-area about-five">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="post-content">
          <p class="lead">{{ description }}</p>
          
          {% if eventDate or location or eventTime %}
            <div class="mt-4 p-4 border rounded bg-light">
              <h3 class="mb-3"><i class="lni lni-clipboard"></i> Praktisk information</h3>
              <div class="row">
                {% if eventDate %}
                  <div class="col-md-4 mb-2">
                    <strong><i class="lni lni-calendar"></i> Datum:</strong><br>
                    {{ eventDate | date("D MMMM YYYY", "sv") }}
                  </div>
                {% endif %}
                {% if eventTime %}
                  <div class="col-md-4 mb-2">
                    <strong><i class="lni lni-clock"></i> Tid:</strong><br>
                    {{ eventTime }}
                  </div>
                {% endif %}
                {% if location %}
                  <div class="col-md-4 mb-2">
                    <strong><i class="lni lni-map-marker"></i> Plats:</strong><br>
                    {{ location }}
                  </div>
                {% endif %}
              </div>
              {% if eventLink %}
                <div class="mt-3 pt-3 border-top">
                  <strong><i class="lni lni-link"></i> Evenemangslänk:</strong>
                  <a href="{{ eventLink }}" target="_blank" rel="noopener" class="text-decoration-none text-dark ms-2">
                    <i class="lni lni-facebook-original me-1"></i>
                    Gå till evenemanget
                  </a>
                </div>
              {% endif %}
            </div>
          {% endif %}
          
          {{ content | safe }}
          
          <!-- Navigation to other posts -->
          <nav class="mt-5 pt-4 border-top">
            <div class="row">
              <div class="col-md-6">
                {% set prevPost = collections.blog | getPreviousCollectionItem(page) %}
                {% if prevPost %}
                  <a href="{{ prevPost.url }}" class="btn primary-btn text-start">
                    <i class="lni lni-arrow-left"></i>
                    Föregående
                  </a>
                {% endif %}
              </div>
              <div class="col-md-6 text-end">
                {% set nextPost = collections.blog | getNextCollectionItem(page) %}
                {% if nextPost %}
                  <a href="{{ nextPost.url }}" class="btn primary-btn">
                    Nästa
                    <i class="lni lni-arrow-right"></i>
                  </a>
                {% endif %}
              </div>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <!-- container -->
</section>
<!--====== POST CONTENT ENDS ======-->
