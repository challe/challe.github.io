<section id="products" class="portfolio-area portfolio-three">
  <!--======  Start Section Title Five ======-->

  <!--======  End Section Title Five ======-->
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="portfolio-menu text-center">
          <button data-filter="all" class="active">ALLA</button>
          <button data-filter="premium">PREMIUM</button>
          <button data-filter="exklusiv" class="">EXKLUSIV</button>
          <button data-filter="standard" class="">STANDARD</button>
        </div>
        <!-- portfolio menu -->
      </div>
    </div>
    <!-- row -->
    <div id="portfolio-container" class="row grid">
      {%- for product in products.products %}
      {%- set categoryLabel = product.category | capitalize %}
      {%- set iconClass = 'lni lni-tag' %}
      {%- if product.category == 'premium' %}
        {%- set iconClass = 'lni lni-crown' %}
      {%- elif product.category == 'exklusiv' %}
        {%- set iconClass = 'lni lni-diamond' %}
      {%- elif product.category == 'standard' %}
        {%- set iconClass = 'lni lni-circle-plus' %}
      {%- endif %}
      <div class="col-lg-4 col-sm-6" data-filter="{{ product.category }}">
        <div class="portfolio-style-three">
          <div class="portfolio-image">
            {% productImage product.imagePath, product.title, "/saintpaulior/" + (product.title | slugify) + "/", product.title, product.description %}
            <div class="meta-details">
              <span><i class="{{ iconClass }}"></i> {{ categoryLabel }}</span>
            </div>
          </div>
          <div class="portfolio-text">
            <h4 class="portfolio-title">
              <a href="/saintpaulior/{{ product.title | slugify }}/">{{ product.title }}</a>
            </h4>
            <p class="text">
              {{ product.description }}
            </p>
          </div>
        </div>
        <!-- single portfolio -->
      </div>
      {%- endfor %}
    </div>
    <!-- row -->
  </div>
  <!-- container -->
</section>

<!-- Start Pricing Area -->
<section id="pricing" class="pricing-area pricing-fourteen">
  <!--======  Start Section Title Five ======-->
  <div class="section-title-five">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="content">
            <h6>Priser</h6>
            <h2 class="fw-bold">Priser & Kategorier</h2>
            <p>
              Det finns flera olika sorter att välja mellan, med varierande utseende och exklusivitet. Här hittar du en översikt över mina kategorier och deras priser.
            </p>
          </div>
        </div>
      </div>
      <!-- row -->
    </div>
    <!-- container -->
  </div>
  <!--======  End Section Title Five ======-->
  <div class="container">
    <div class="row">
      {%- for key, category in site.pricing %}
      <div class="col-lg-4 col-md-6 col-12">
        <div class="pricing-style-fourteen{% if key == 'exklusiv' %} middle{% endif %}">
          <div class="table-head">
            <h6 class="title">{{ category.title }}</h6>
            <p>{{ category.description }}</p>
            <div class="price">
              <h2 class="amount">
                {{ category.price }}<span class="duration">kr</span>
              </h2>
            </div>
          </div>

          <div class="table-content">
            <ul class="table-list">
              {%- for feature in category.features %}
              <li><i class="lni lni-checkmark-circle"></i> {{ feature }}</li>
              {%- endfor %}
            </ul>
          </div>
        </div>
      </div>
      {%- endfor %}
    </div>
  </div>
</section>
<!--/ End Pricing Area -->
